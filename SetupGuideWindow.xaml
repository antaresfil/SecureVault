<Window x:Class="SecureVault.SetupGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP SecureVault - Setup Guide"
        Height="650" Width="760"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" Margin="20" Padding="30" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="üìñ MP SecureVault - Setup Guide"
                           FontSize="24" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,20"/>

                <TextBlock Text="Overview" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <TextBlock TextWrapping="Wrap" Foreground="#555" Margin="0,0,0,20">
                    MP SecureVault encrypts files using AES-GCM and derives keys with Argon2id. Password is always required.
                    Optionally, you can add a keyfile as a second cryptographic factor.
                </TextBlock>

                <TextBlock Text="üîí Security Model" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,20">
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="‚Ä¢"/> Password is mandatory for encryption and decryption.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="‚Ä¢"/> If a file was encrypted with a keyfile, the same keyfile (same bytes) is mandatory to decrypt.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="‚Ä¢"/> Renaming or moving the keyfile is OK; changing its content breaks decryption.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="‚Ä¢"/> Secure deletion is optional and overwrites the original file before removal.</TextBlock>
                </StackPanel>

                <TextBlock Text="1Ô∏è‚É£ Password" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,20">
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run FontWeight="Bold">Recommended:</Run> 14+ characters, unique, stored in a password manager.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5" Foreground="#D32F2F"><Run FontWeight="Bold">‚ö†Ô∏è Warning:</Run> If you lose the password, encrypted files cannot be recovered.</TextBlock>
                </StackPanel>

                <TextBlock Text="2Ô∏è‚É£ Keyfile (optional, stronger protection)" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,20">
                    <TextBlock TextWrapping="Wrap" Margin="0,5">Use a dedicated random keyfile (recommended: 32‚Äì64 bytes). Avoid documents/photos because they may change over time.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="‚Ä¢"/> Keep at least 2 offline backups of the keyfile.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5" Foreground="#D32F2F"><Run FontWeight="Bold">‚ö†Ô∏è Warning:</Run> If you lose the keyfile used to encrypt a file, that file cannot be recovered.</TextBlock>
                </StackPanel>

                <TextBlock Text="üìù How to Use" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,20">
                    <TextBlock TextWrapping="Wrap" Margin="0,5" FontWeight="Bold">Encrypt:</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="1."/> Select a file.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="2."/> Enter password (required).</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="3."/> (Optional) Enable keyfile and select the keyfile.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="4."/> Click Execute.</TextBlock>

                    <TextBlock TextWrapping="Wrap" Margin="0,15,0,5" FontWeight="Bold">Decrypt:</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="1."/> Select the .svlt file.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="2."/> Enter password.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="3."/> If the file requires a keyfile, select the same keyfile used for encryption.</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run Text="4."/> Click Execute.</TextBlock>
                </StackPanel>

                <TextBlock Text="üî¨ Technical" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,10,0,10"/>
                <StackPanel Margin="15,0,0,0">
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run FontWeight="Bold">Cipher:</Run> AES-GCM</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run FontWeight="Bold">KDF:</Run> Argon2id (parameters stored in file header or fixed by version)</TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5"><Run FontWeight="Bold">Factors:</Run> Password (required) + optional Keyfile (content-based)</TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
