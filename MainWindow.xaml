<Window x:Class="SecureVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP SecureVault by Massimo Parisi - mpsecurevault@noxfarm.com" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,5,5,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15" CornerRadius="8" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”’ SecureVault" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Massimo Parisi" FontSize="13" FontWeight="SemiBold" Foreground="#E3F2FD" Margin="0,3,0,0"/>
                    <TextBlock Text="Multi-Factor File Encryption System" FontSize="11" Foreground="#B3E5FC" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="Ready" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Right"/>
                    <TextBlock Text="Keyfile: Optional (required if file was encrypted with it)" FontSize="11" Foreground="#E3F2FD" Margin="0,3,0,0" HorizontalAlignment="Right"/>
                    
                    <!-- Help Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="â„¹ï¸ About" Width="100" Height="32" Margin="0,0,5,0" Click="AboutButton_Click" 
                                Background="#FF9800" FontSize="12" Padding="8,6"/>
                        <Button Content="ðŸ“š Help (IT)" Width="110" Height="32" Margin="0,0,5,0" Click="HelpIT_Click" 
                                Background="#4CAF50" FontSize="12" Padding="8,6"/>
                        <Button Content="ðŸ“š Help (EN)" Width="110" Height="32" Click="HelpEN_Click" 
                                Background="#4CAF50" FontSize="12" Padding="8,6"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" Padding="20" CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Operation Mode - SPOSTATO IN ALTO -->
                    <GroupBox Header="âš™ï¸ Operation" Margin="0,0,0,15" Padding="15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton x:Name="EncryptRadioButton" Content="ðŸ”’ Encrypt File" IsChecked="True" Margin="15,5" GroupName="Operation" FontSize="16" FontWeight="SemiBold"/>
                            <RadioButton x:Name="DecryptRadioButton" Content="ðŸ”“ Decrypt File" Margin="15,5" GroupName="Operation" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- File Selection -->
                    <GroupBox Header="ðŸ“ File Selection" Margin="0,0,0,15" Padding="15">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="FilePathTextBox" Grid.Column="0" IsReadOnly="True" Margin="0,0,10,0" TextChanged="FilePathTextBox_TextChanged"/>
                                <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse..." Click="BrowseButton_Click" Width="100"/>
                            </Grid>

                            <!-- File Info Display -->
                            <Border x:Name="FileInfoPanel" Background="#E3F2FD" Padding="10" CornerRadius="4" Margin="0,10,0,0" Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock x:Name="FileInfoText" FontWeight="Bold" Foreground="#1976D2" FontSize="13"/>
                                    <TextBlock x:Name="FileInfoDetails" Foreground="#555" FontSize="11" Margin="0,3,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Output:" Grid.Column="0" Width="100"/>
                                <TextBox x:Name="OutputPathTextBox" Grid.Column="1" IsReadOnly="True"/>
                            </Grid>

                            <CheckBox x:Name="SecureDeleteCheckBox" Content="Securely delete original file after encryption (3-pass overwrite)" Margin="0,10,0,0" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Authentication Factors -->
                    <GroupBox Header="ðŸ” Authentication Factors (Select at least one)" Margin="0,0,0,15" Padding="15">
                        <StackPanel>
                            <!-- Password -->
                            <CheckBox x:Name="UsePasswordCheckBox" Content="Use Password (required)" IsChecked="True" IsEnabled="False"/>
                            <Grid Margin="25,5,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Password:" Grid.Column="0" Width="100"/>
                                <PasswordBox x:Name="PasswordBox" Grid.Column="1" PasswordChanged="AuthFactor_Changed"/>
                            </Grid>

                            <!-- Keyfile (cryptographic factor) -->
                            <CheckBox x:Name="UseKeyFileCheckBox" Content="Use Keyfile (Cryptographic second factor)" Checked="AuthFactor_Changed" Unchecked="AuthFactor_Changed"/>
                            <Grid Margin="25,5,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Keyfile:" Grid.Column="0" Width="100"/>
                                <TextBox x:Name="KeyFilePathTextBox" Grid.Column="1" IsReadOnly="True" TextChanged="AuthFactor_Changed"/>
                                <Button x:Name="BrowseKeyFileButton" Grid.Column="2" Content="Browse..." Click="BrowseKeyFileButton_Click" Width="120"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20" CornerRadius="8" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="SetupGuideButton" Content="ðŸ“– Setup Guide" Click="SetupGuideButton_Click" Background="#FF9800" Width="130"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ExecuteButton" Content="ðŸš€ Start" Click="ExecuteButton_Click" Width="150" FontWeight="Bold" Background="#4CAF50" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress/Status Bar -->
        <Border Grid.Row="3" Background="#E3F2FD" Padding="15" CornerRadius="8" Margin="0,15,0,0" x:Name="ProgressPanel" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="ProgressText" Text="Processing..." FontWeight="Bold" Margin="0,0,0,10"/>
                <ProgressBar x:Name="ProgressBar" Height="8" IsIndeterminate="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
