<Window x:Class="SecureVault.HelpWindowEN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Guide - SecureVault" 
        Height="650" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20" CornerRadius="8" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="üìö SecureVault User Guide" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Complete instructions for secure encryption and decryption" FontSize="14" Foreground="#E3F2FD" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" Padding="25" CornerRadius="8">
                <StackPanel>
                    
                    <!-- Encryption -->
                    <TextBlock Text="üîí ENCRYPTING A FILE" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">1.</Run> Select <Run FontWeight="Bold">"Encrypt"</Run> in the Operation section
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">2.</Run> Click <Run FontWeight="Bold">"Browse"</Run> and choose the file to encrypt
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">3.</Run> Enter a <Run FontWeight="Bold">strong password</Run> (minimum 8 characters, with letters, numbers, and symbols)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">4.</Run> <Run FontStyle="Italic">[Optional]</Run> Select a <Run FontWeight="Bold">keyfile</Run> for additional security
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">5.</Run> <Run FontStyle="Italic">[Optional]</Run> Uncheck <Run FontWeight="Bold">"Securely delete original file"</Run> if you want to keep the original
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                        <Run FontWeight="Bold">6.</Run> Click <Run FontWeight="Bold">"Execute"</Run>
                    </TextBlock>
                    
                    <Border Background="#E3F2FD" Padding="12" CornerRadius="4" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="üí° Result" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap">
                                A <Run FontWeight="Bold">.svlt</Run> file will be created (e.g., document.pdf ‚Üí document.pdf.svlt)
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                If "Securely delete" is enabled, the original file will be securely wiped.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Decryption -->
                    <TextBlock Text="üîì DECRYPTING A FILE" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">1.</Run> Select <Run FontWeight="Bold">"Decrypt"</Run> in the Operation section
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">2.</Run> Click <Run FontWeight="Bold">"Browse"</Run> and choose the <Run FontWeight="Bold">.svlt</Run> file to decrypt
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">3.</Run> Enter the <Run FontWeight="Bold">same password</Run> used for encryption
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">4.</Run> If the file was encrypted with a keyfile, select <Run FontWeight="Bold">the same keyfile</Run>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                        <Run FontWeight="Bold">5.</Run> Click <Run FontWeight="Bold">"Execute"</Run>
                    </TextBlock>

                    <Border Background="#E3F2FD" Padding="12" CornerRadius="4" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="üí° Result" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap">
                                The original file will be restored with its original name and contents.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Keyfile -->
                    <TextBlock Text="üîë WHAT IS A KEYFILE?" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        A keyfile is any file (image, document, etc.) that acts as a <Run FontWeight="Bold">second security key</Run>.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                        <Run FontWeight="Bold">Benefits:</Run>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚Ä¢ <Run FontWeight="Bold">Two-factor protection:</Run> requires both password and keyfile to decrypt
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚Ä¢ <Run FontWeight="Bold">Impossible to guess:</Run> even with the password, the file is inaccessible without the keyfile
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,5">
                        <Run FontWeight="Bold">‚ö†Ô∏è IMPORTANT:</Run>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,20">
                        Keep your keyfile safe! If you lose it, you <Run FontWeight="Bold">CANNOT decrypt</Run> your files.
                    </TextBlock>

                    <!-- Secure Delete -->
                    <TextBlock Text="üóëÔ∏è SECURE DELETE" FontSize="18" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        When this option is enabled, the original file is:
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        <Run FontWeight="Bold">1.</Run> Overwritten 3 times with random data (DoD 5220.22-M standard)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        <Run FontWeight="Bold">2.</Run> Permanently deleted
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,20">
                        This makes it <Run FontWeight="Bold">impossible to recover</Run> the original file, even with advanced forensic tools.
                    </TextBlock>

                    <!-- Common Errors -->
                    <TextBlock Text="‚ö†Ô∏è COMMON ERRORS" FontSize="18" FontWeight="Bold" Foreground="#D32F2F" Margin="0,10,0,10"/>
                    
                    <TextBlock Text="‚ùå Incorrect password" FontWeight="Bold" Margin="0,5,0,3"/>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,10">
                        Make sure you entered exactly the same password used for encryption (case-sensitive!)
                    </TextBlock>

                    <TextBlock Text="‚ùå Wrong keyfile" FontWeight="Bold" Margin="0,5,0,3"/>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,10">
                        You must use <Run FontWeight="Bold">exactly the same file</Run> used for encryption. Even one byte of difference makes decryption impossible.
                    </TextBlock>

                    <TextBlock Text="‚ùå File encrypted with keyfile, but keyfile not provided" FontWeight="Bold" Margin="0,5,0,3"/>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,10">
                        If you encrypted with a keyfile, you MUST provide the same keyfile to decrypt.
                    </TextBlock>

                    <!-- Tips -->
                    <TextBlock Text="üí° SECURITY TIPS" FontSize="18" FontWeight="Bold" Foreground="#388E3C" Margin="0,20,0,10"/>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚úì Use long and complex passwords (at least 12 characters)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚úì Combine password + keyfile for maximum security
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚úì Keep backups of keyfiles in different, secure locations
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚úì Never share passwords or keyfiles via unencrypted email
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="15,0,0,5">
                        ‚úì Use "Secure Delete" for sensitive files
                    </TextBlock>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,15,0,0">
            <Button Content="Close" Width="120" HorizontalAlignment="Right" Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>
